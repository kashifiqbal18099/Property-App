<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.chat.ChatMessageActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@color/appBlue"
            app:title="User Dashboard"
            app:titleTextColor="@color/white" />


        <TextView
            android:id="@+id/ChatConnectionTV"
            android:layout_width="fill_parent"

            android:layout_height="wrap_content"
            android:layout_marginTop="0.0dip"
            android:layout_marginBottom="3.0dip"
            android:background="#32CD32"
            android:padding="2.0dip"
            android:layout_below="@+id/toolBar"
            android:text="No internet"
            android:textAlignment="center"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/message_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@id/message_view"
            app:stackFromEnd="true"
            android:layout_below="@id/ChatConnectionTV"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="55.0dip"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        <FrameLayout
            android:id="@+id/message_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <androidx.cardview.widget.CardView
                style="@style/CardViewTheme"
                android:layout_width="fill_parent"
                android:layout_height="48.0dip"
                android:layout_gravity="bottom|center|right"
                android:layout_marginStart="4.0dip"
                android:layout_marginEnd="56.0dip"
                android:layout_marginBottom="4.0dip"
                android:background="@color/white"
                app:cardCornerRadius="20.0dip">

                <EditText
                    android:id="@+id/edit_text"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@color/white"
                    android:hint="Enter mesage"
                    android:padding="5.0dip"
                    android:textSize="20.0sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/imageViewSend"
                style="@style/CardViewTheme"
                android:layout_width="44.0dip"
                android:layout_height="44.0dip"
                android:layout_gravity="bottom|center|right"
                android:layout_marginTop="6.0dip"
                android:layout_marginRight="10.0dip"
                android:layout_marginBottom="6.0dip"
                android:background="#ffffffff"
                android:clickable="true"
                app:cardCornerRadius="22.0dip"
                app:cardUseCompatPadding="false"
                app:contentPadding="0.0dip">

                <ImageView
                    android:id="@+id/imageSend"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#32CD32"
                    android:padding="10.0dip"
                    android:src="@drawable/send_msg_ic" />
            </androidx.cardview.widget.CardView>
        </FrameLayout>


    </RelativeLayout>
</layout>
