<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <import type="com.fyp.propertydealerapp.viewmodels.AgentFormErros" />
        <variable
            name="agentViewModel"
            type="com.fyp.propertydealerapp.viewmodels.AgentViewModel"/>

        <variable
            name="clickHandler"
            type="com.fyp.propertydealerapp.util.ClickHandlers" />
    </data>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.agents.AddAgentsActivity">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@color/appBlue"
            app:title="Add Agents"
            android:id="@+id/toolBar"
            app:titleTextColor="@color/white"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_below="@+id/toolBar"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:orientation="vertical"
            >


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorText='@{agentViewModel.formErrors.contains(AgentFormErros.MISSING_FIRSTNAME) ? "Required" : ""}'
                >

                <EditText
                    android:layout_marginTop="@dimen/_20sdp"
                    android:hint="First Name"
                    android:text="@={agentViewModel.firstName}"
                    style="@style/EditTextLogin"
                    />

            </com.google.android.material.textfield.TextInputLayout>



            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorText='@{agentViewModel.formErrors.contains(AgentFormErros.MISSING_LASTNAME) ? "Required" : ""}'
                >
                <EditText
                    android:layout_marginTop="@dimen/_20sdp"
                    android:hint="Last Name"
                    android:text="@={agentViewModel.lastName}"
                    style="@style/EditTextLogin"
                    />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorText='@{agentViewModel.formErrors.contains(AgentFormErros.MISSING_EMAIL) ? "Required" : ""}'
                >
                <EditText
                    android:layout_marginTop="@dimen/_20sdp"
                    android:hint="Email"
                    android:text="@={agentViewModel.email}"
                    style="@style/EditTextLogin"
                    />

            </com.google.android.material.textfield.TextInputLayout>



            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorText='@{agentViewModel.formErrors.contains(AgentFormErros.MISSING_PHONE) ? "Required" : ""}'
                >
                <EditText
                    android:layout_marginTop="@dimen/_20sdp"
                    android:hint="Phone Number"
                    android:text="@={agentViewModel.phoneNumber}"
                    style="@style/EditTextLogin"
                    />
            </com.google.android.material.textfield.TextInputLayout>





            <Button
                android:text="Add Agent"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_50sdp"
                android:layout_marginRight="@dimen/_50sdp"
                android:onClick="@{clickHandler::onClick}"
                android:textSize="@dimen/_10sdp"
                style="@style/LoginButtonStyle"/>

        </LinearLayout>

    </RelativeLayout>
</layout>
